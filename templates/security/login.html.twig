{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	<div class="block">
		<h2 class="pb-30">Connexion</h2>
		<form action="{{ path('login')}}" method="post">
			<div class="form-row">
				<label for="email">Email</label>
				<input type="text" id="email" name="_username" value="{{ username}}" autofocus>
			</div>
			<div class="form-row">
				<label for="password">Password</label>
				<input type="password" id="password" name="_password">
			</div>
			<div class="form-row">
				<label for="remember_me">
					<input type="checkbox" id="remember_me" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			{% if error %}
				<ul class="form-errors pb-20">
					<li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
				</ul>
			{% endif %}

			<div class="d-flex flex-row-nowrap">
				<button class="btn btn-primary mr-10">Connexion</button>
				<div class="d-flex flex-column">
					<small>
						<a href="{{ path('signup') }}">Vous n'avez pas encore de compte?</a>
					</small>
					<small>
						<a href="{{ path('reset-password-request') }}">Mot de passe oubli√© ?</a>
					</small>
				</div>
			</div>

		</form>

	</div>
{% endblock %}
